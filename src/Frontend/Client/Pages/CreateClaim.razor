@page "/claims/create"
@attribute [Authorize]
@inject ApiClient Api
@inject ISnackbar Snackbar

<MudText Typo="Typo.h4" Class="mb-4">Create Claim</MudText>

<MudPaper Class="pa-4" MaxWidth="600">
    <MudForm @ref="_form">
        <MudSelect T="Guid" @bind-Value="_model.ArticleId" Label="Article" Required="true">
            @foreach (var article in _articles)
            {
                <MudSelectItem Value="article.Id">@article.Name (@article.Brand)</MudSelectItem>
            }
        </MudSelect>
        <MudTextField @bind-Value="_model.SerialNumber" Label="Serial Number" Required="true" />
        <MudDatePicker @bind-Date="_purchaseDate" Label="Purchase Date" Required="true" />
        <MudTextField @bind-Value="_model.Description" Label="Description" Lines="4" Required="true" />
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Submit" Disabled="_loading">Submit</MudButton>
    </MudForm>
</MudPaper>

@code {
    private MudForm? _form;
    private bool _loading;
    private List<ArticleResponse> _articles = new();
    private CreateClaimRequest _model = new(Guid.Empty, string.Empty, DateOnly.FromDateTime(DateTime.Today), string.Empty);
    private DateTime? _purchaseDate = DateTime.Today;

    protected override async Task OnInitializedAsync()
    {
        _articles = (await Api.GetArticlesAsync()).Where(a => a.Active).ToList();
    }

    private async Task Submit()
    {
        if (_form is null)
        {
            return;
        }

        await _form.Validate();
        if (!_form.IsValid || _purchaseDate is null)
        {
            Snackbar.Add("Please fill all fields.", Severity.Warning);
            return;
        }

        _loading = true;
        try
        {
            var request = _model with { PurchaseDate = DateOnly.FromDateTime(_purchaseDate.Value) };
            await Api.CreateClaimAsync(request);
            Snackbar.Add("Claim submitted.", Severity.Success);
            _model = new CreateClaimRequest(Guid.Empty, string.Empty, DateOnly.FromDateTime(DateTime.Today), string.Empty);
        }
        catch
        {
            Snackbar.Add("Unable to create claim.", Severity.Error);
        }
        finally
        {
            _loading = false;
        }
    }
}
