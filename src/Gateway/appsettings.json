{
  "ReverseProxy": {
    "Routes": {
      "identity": {
        "ClusterId": "identity",
        "Match": {
          "Path": "/identity/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/identity" }
        ]
      },
      "catalog": {
        "ClusterId": "catalog",
        "Match": {
          "Path": "/catalog/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/catalog" }
        ]
      },
      "claims": {
        "ClusterId": "claims",
        "Match": {
          "Path": "/claims/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/claims" }
        ]
      },
      "interventions": {
        "ClusterId": "interventions",
        "Match": {
          "Path": "/interventions/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/interventions" }
        ]
      }
    },
    "Clusters": {
      "identity": {
        "Destinations": {
          "d1": { "Address": "http://identity-service:8080/" }
        }
      },
      "catalog": {
        "Destinations": {
          "d1": { "Address": "http://catalog-service:8080/" }
        }
      },
      "claims": {
        "Destinations": {
          "d1": { "Address": "http://claims-service:8080/" }
        }
      },
      "interventions": {
        "Destinations": {
          "d1": { "Address": "http://interventions-service:8080/" }
        }
      }
    }
  }
}
